{{ form_start(form, {'attr': {'class': 'form'}}) }}

<div class="form-group mb-3">
	<label>Email :</label>
	{{ form_widget(form.email) }}
</div>

<div class="form-group mb-3">
	<label>Nom d'utilisateur :</label>
	{{ form_widget(form.username) }}
</div>

<div class="form-group mb-3">
	<label>Numéro de téléphone :</label>
	{{ form_widget(form.number) }}
</div>

<div>
	<label>Photo de profil actuelle :</label>
	{% if user.profilePicture %}
		<img src="{{ asset(user.profilePicture) }}" alt="Photo de profil" style="max-width: 150px; max-height: 150px;">
	{% else %}
		<img src="{{ asset('./images/profil.png') }}" alt="Photo de profil par défaut" style="max-width: 150px; max-height: 150px;">
	{% endif %}
</div>

<div class="form-group mb-3">
	<label>Nouvelle photo de profil :</label>
	{{ form_widget(form.profilePicture) }}
</div>

<div class="form-group mb-3">
	<label>Mot de passe :</label>
	{{ form_widget(form.password) }}
</div>

<button class="btn button-form-profile">
	<img class="check-edit" src="{{ asset('images/check.svg') }}"  alt="icon check white">
	<img class="chek-hover" src="{{ asset('images/check-hover.svg') }}"  alt="icon check black">
</button>

{{ form_end(form) }}

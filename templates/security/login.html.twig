{% extends 'base.html.twig' %}

{% block title %}Astra - Connexion
{% endblock %}

{% block body %}
	<main>
		<div class="box-logo">
			<img src="{{ asset('images/star_white.svg') }}" class="logo logo-login" alt="Logo Astra"></div>

		<h1 class="h1-login">Connectez-vous !</h1>
		<form method="post" class="form-login">
			{% if error %}
				<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
			{% endif %}


			<div class="form-group">
				<input type="email" value="{{ last_username }}" name="_username" id="username" class="form-control input-login" autocomplete="email" required placeholder=" ">
				<label for="username" class="label-login">Email</label>
			</div>

			<div class="form-group">
				<input type="password" name="_password" id="password" class="form-control input-login" autocomplete="current-password" required placeholder=" ">
				<label for="password" class="label-login">Mot de passe</label>
			</div>

			<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

			<button class="button-login" type="submit">
				<svg xmlns="http://www.w3.org/2000/svg" viewbox="0 0 32 32" class="login-svg">
					<g id="lock"><path d="M24,14V10A8,8,0,0,0,8,10v4a3.24,3.24,0,0,0-3,3.21v9.54A3.23,3.23,0,0,0,8.23,30H23.77A3.23,3.23,0,0,0,27,26.77V17.23A3.24,3.24,0,0,0,24,14ZM16,4a6,6,0,0,1,6,6v4H10V10A6,6,0,0,1,16,4Zm9,22.77A1.23,1.23,0,0,1,23.77,28H8.23A1.23,1.23,0,0,1,7,26.77V17.23A1.23,1.23,0,0,1,8.23,16H23.77A1.23,1.23,0,0,1,25,17.23Z"/></g>
				</svg>
			</button>
		</form>
	</main>
	<footer>&copy; Copyright 2025 - Astra</footer>

{% endblock %}

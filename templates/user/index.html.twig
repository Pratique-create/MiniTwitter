



{% extends 'base.html.twig' %}

{% block title %}
	{{user.username}}'s Profile
{% endblock %}

{% block body %}

	<div class="">
		<div class="">
			<div class="">
				<img src="{{ asset(user.profilePicture) }}" alt="Photo de profil" style="max-width: 150px; max-height: 150px;">
			</div>
			<div class="">
				<h1>{{ user.username }}</h1>
				{# <p>{{ user.email }}</p> #}
			</div>

			<div class="">
				<h2>Latest Tweets</h2>
				{% for post in posts %}
					<div class="">
						<p>{{ post.content }}</p>
						<span>Posted on {{ post.createdAt|date('Y-m-d H:i') }}</span>
						<div>
							<a href="{{ path('app_retweet', {'id': post.id}) }}" class="btn btn-primary">Retweeter</a>
							<p> {{ retweetCount[post.id] }} </p>
						</div>
						<div>
							<a href="{{ path('app_like', {'id': post.id}) }}" class="btn btn-primary">Like</a>
							<p> {{ likeCount[post.id] }} </p>
						</div>
					</div>
				{% else %}
					<p>No tweets to show.</p>
				{% endfor %}
			</div>
		</div>

	</div>
	<div class="">
		<a href="{{ path('app_user_edit', {'id': user.id}) }}">edit</a>
	</div>
{% endblock %}
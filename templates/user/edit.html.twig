{% extends 'base.html.twig' %}

{% block title %}Edit User
{% endblock %}

{% block body %}
	<header>
		<nav class="nav-bar">
			{% if app.user %}

				<img src="{{ asset('images/star_white.svg') }}" class="logo-nav" alt="Logo Astra">

				<a href="{{ path('app_logout') }}" class="btn">Log out</a>

				{% else %}
			{% endif %}
		</nav>
	</header>
	<main>
		<h1>Edit User</h1>

		{{ include('user/_form.html.twig', {'button_label': 'Update'}) }}

		<a href="{{ path('app_user_index', {'id': app.user.id}) }}">back to profile</a>

		{{ include('user/_delete_form.html.twig') }}
	</main>
	<footer>&copy; Copyright 2025 - Astra</footer>

{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}Retweets index{% endblock %}

{% block body %}
    <h1>Retweets index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>CreatedAt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for retweet in retweets %}
            <tr>
                <td>{{ retweet.id }}</td>
                <td>{{ retweet.createdAt ? retweet.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_retweets_show', {'id': retweet.id}) }}">show</a>
                    <a href="{{ path('app_retweets_edit', {'id': retweet.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_retweets_new') }}">Create new</a>
{% endblock %}

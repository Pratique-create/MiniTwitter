{% extends 'base.html.twig' %}

{% block title %}Posts index
{% endblock %}

{% block body %}
	<h1>Tweets</h1>

	{% for post in posts %}
		<div>
			<div>
				<img>
				<p>{{ post.UserId.username }}</p>
			</div>
			<div>
				<p>{{ post.content|slice(0, 100) }}</p>
			</div>
			<div>
				<p>{{ post.createdAt ? post.createdAt|date('Y-m-d H:i:s') : '' }}</p>
			</div>

			{% else %}
		{% endfor %}

		<a href="{{ path('app_posts_new') }}">Create new</a>
	{% endblock %}

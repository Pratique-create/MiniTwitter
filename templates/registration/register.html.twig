{% extends 'base.html.twig' %}

{% block title %}Astra - Inscription
{% endblock %}

{% block body %}
	<main>
		<a href="{{path('home_page')}}">
			<svg class="goback-sign" xmlns="http://www.w3.org/2000/svg" viewbox="0 0 24 24">
				<polygon points="7.293 4.707 14.586 12 7.293 19.293 8.707 20.707 17.414 12 8.707 3.293 7.293 4.707"/>
			</svg>
		</a>
		<div class="register-page">
			<div class="box-logo">
				<img src="{{ asset('images/star_blue.svg') }}" class="logo logo-register" alt="Logo Astra">
			</div>

			<h1 class="h1-register">Inscrivez-vous !</h1>

			{{ form_errors(registrationForm) }}

			{{ form_start(registrationForm, { 'attr': {'class': 'form-register'} }) }}


			<div class="form-group">
				{{ form_widget(registrationForm.email, {'attr': {'class': 'input-register', 'placeholder': ' '}}) }}
				{{ form_label(registrationForm.email, 'Email', {'label_attr': {'class': 'label-register'}}) }}
			</div>

			<div class="form-group">
				{{ form_widget(registrationForm.number, {'attr': {'class': 'input-register', 'placeholder': ' '}}) }}
				{{ form_label(registrationForm.number, 'Numéro de téléphone', {'label_attr': {'class': 'label-register'}}) }}
			</div>

			<div class="form-group">
				{{ form_widget(registrationForm.username, {'attr': {'class': 'input-register', 'placeholder': ' '}}) }}
				{{ form_label(registrationForm.username, 'Nom d\'utilisateur', {'label_attr': {'class': 'label-register'}}) }}
    </div>

    <div class="form-group">
        {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'input-register', 'placeholder': ' '}}) }}
        {{ form_label(registrationForm.plainPassword, 'Mot de passe', {'label_attr': {'class': 'label-register'}}) }}
    </div>

    <div class="form-group agree-terms">
        {{ form_widget(registrationForm.agreeTerms, {'attr': {'class': 'checkbox-register'}}) }}
        {{ form_label(registrationForm.agreeTerms, 'J\'accepte les conditions', {'label_attr': {'class': 'label-agree-terms'}}) }}
			</div>

			<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

			<button type="submit" class="button-register">
				<svg class="signin-svg" version="1.1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" x="0px" y="0px" viewbox="0 0 128 128" style="enable-background:new 0 0 128 128;" xml:space="preserve">
					<g id="signin">
						<path d="M128,63.954c0,2.006-0.797,3.821-2.136,5.127c-1.308,1.337-3.125,2.133-5.166,2.133H71.302v49.356
																																																														c0,4.012-3.284,7.292-7.302,7.292c-2.009,0-3.827-0.828-5.166-2.134c-1.308-1.337-2.136-3.152-2.136-5.159V71.214H7.302
																																																														c-4.05,0-7.302-3.248-7.302-7.26c0-2.006,0.797-3.853,2.136-5.159c1.308-1.306,3.125-2.134,5.166-2.134h49.395V7.306
																																																														c0-4.012,3.284-7.26,7.302-7.26c2.009,0,3.827,0.828,5.166,2.133c1.308,1.306,2.136,3.121,2.136,5.127v49.356h49.395
																																																														C124.747,56.662,128,59.91,128,63.954z"/>
					</g>
					{# <g id="Layer_1"></g> #}
				</svg>
			</button>

			{{ form_end(registrationForm) }}
		</div>
	</main>

	<footer>&copy; Copyright 2025 - Astra</footer>

{% endblock %}

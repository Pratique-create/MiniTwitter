{% extends 'base.html.twig' %}

{% block title %}Register
{% endblock %}

{% block body %}

	<div class="m-5 d-flex justify-content-center align-items-center flex-column">


		<h1 class="h3 mb-3 font-weight-normal d-flex justify-content-center align-items-center m-5">Register</h1>

		{{ form_errors(registrationForm) }}

		{{ form_start(registrationForm, { 'attr': {'class': 'form-signin d-flex justify-content-center align-items-center flex-column'} }) }}

		<div class="form-group d-flex justify-content-center align-items-center mx-5 my-3 flex-column text-center">
			{{ form_row(registrationForm.email, {'attr': {'class': 'form-control mx-5 text-center'}}) }}
		</div>

		<div class="form-group d-flex justify-content-center align-items-center mx-5 my-3 flex-column text-center">
			{{ form_row(registrationForm.number, {'attr': {'class': 'form-control mx-5 text-center'}}) }}
		</div>

		<div class="form-group d-flex justify-content-center align-items-center mx-5 my-3 flex-column text-center">
			{{form_row(registrationForm.username, {
            label: 'Username', 'attr' : {'class': 'form-control mx-5 text-center'}
        } )}}
		</div>


		<div class="form-group d-flex justify-content-center align-items-center mx-5 my-3 flex-column text-center">
			{{ form_row(registrationForm.plainPassword, {
            label: 'Password', 'attr' : {'class': 'form-control mx-5 text-center'}
        }) }}
		</div>

		<div class="form-group form-check d-flex justify-content-center align-items-center mx-5 my-3">
			{{ form_row(registrationForm.agreeTerms) }}
		</div>
		<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

		<button type="submit" class="btn btn-outline-info">Register</button>
		{{ form_end(registrationForm) }}
	{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}Posts index{% endblock %}

{% block body %}
    <h1>Tweets</h1>

        {% for post in posts %}
            <div>
                <div>
                    <img>
                    <p>{{ post.user.username }}</p>
                </div>
                <div>
                <p>{{ post.content|slice(0, 100) }}</p>
                </div>
                <div>
                <p>{{ post.createdAt ? post.createdAt|date('Y-m-d H:i:s') : '' }}</p>
                <div>
                    <button> RT </button>
                    <p> Nombres de RT </p>
                </div>
                <div>
                    <button> Like </button>
                    <p> Nombres de likes </p>
                </div>
                <div>
                    <a href="{{ path('app_posts_show', {'id': post.id}) }}">show</a>
                    <a href="{{ path('app_posts_edit', {'id': post.id}) }}">edit</a>
                    <a href="{{ path('app_retweet', {'id': post.id}) }}" class="btn btn-primary">Retweeter</a>
                </div>
            </div>

        {% else %}
            <p> Pas de donn√©es trouver </p>
        {% endfor %}

    <a href="{{ path('app_posts_new') }}">Create new</a>
{% endblock %}

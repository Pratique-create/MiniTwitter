{% extends 'base.html.twig' %}

{% block title %}Log in!
{% endblock %}

{% block body %}
	<form method="post" class="m-5 d-flex justify-content-center align-items-center flex-column">
		{% if error %}
			<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
		{% endif %}

		{# 		{% if app.user %}
																	<div class="mb-3">
																		You are logged in as
																		{{ app.user.userIdentifier }}.
																		<a class="btn btn-outline-info my-2 my-sm-0 mx-2 mr-5" href="{{ path('app_logout') }}">Logout</a>
																	</div>
																{% else %}#}

		<h1 class="h3 mb-3 font-weight-normal  d-flex justify-content-center align-items-center m-5">Please sign in</h1>

		<div class="d-flex justify-content-center align-items-center mx-5 my-3 flex-column">
			<label for="email">Email</label>
			<input type="email" value="{{ last_username }}" name="_username" id="username" class="form-control mx-5" autocomplete="email" required autofocus>

		</div>
		<div class="d-flex justify-content-center align-items-center mx-5 my-3 flex-column">
			<label for="password">Password</label>
			<input type="password" name="_password" id="password" class="form-control mx-5" autocomplete="current-password" required>
		</div>
		<input
		type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

		{#
																								            Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
																								            See https://symfony.com/doc/current/security/remember_me.html
																								
																								            <div class="checkbox mb-3">
																								                <input type="checkbox" name="_remember_me" id="_remember_me">
																								                <label for="_remember_me">Remember me</label>
																								            </div>
																								        #}

		<button class="btn btn-outline-info" type="submit">
			Sign in
		</button>
	</form>
{% endblock %}

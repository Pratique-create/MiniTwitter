{% extends 'base.html.twig' %}

{% block title %}Astra - Connexion
{% endblock %}

{% block body %}
	<main>
		<div class="box-logo">
			<img src="{{ asset('images/star_white.svg') }}" class="logo logo-login" alt="Logo Astra">
		</div>

		<h1 class="h1-login">Connectez-vous !</h1>
		<form method="post" class="form-login">
			{% if error %}
				<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
			{% endif %}


			<div class="form-group">
				<input type="email" value="{{ last_username }}" name="_username" id="username" class="form-control input-login" autocomplete="email" required placeholder=" ">
				<label for="username" class="label-login">Email</label>
			</div>

			<div class="form-group">
				<input type="password" name="_password" id="password" class="form-control input-login" autocomplete="current-password" required placeholder=" ">
				<label for="password" class="label-login">Mot de passe</label>
			</div>

			<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

			<button class="button-login" type="submit">Se connecter</button>
		</form>
	</main>
	<footer>&copy; Copyright 2025 - Astra</footer>

{% endblock %}
